@model IEnumerable<CV_Project.Models.InputForm>

@{
    ViewData["Title"] = "Home";
}

<h1>Home</h1>

<p>
    <a asp-action="Create"><i class="fa fa-add"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfilePicture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experiences)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tech_Skills)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <img src="@item.ProfilePictureUrl" class="image-fluid" alt="Profile Picture" style="max-width: 200px; max-height: 200px;" />
            </td>
            <td style="width: 200px; height: 200px; overflow: auto;">
                <textarea readonly class="form-control" rows="5">@Html.DisplayFor(modelItem => item.Experiences)</textarea>
            </td>
            <td style="width: 200px; height: 200px; overflow: auto;">
                <textarea readonly class="form-control" rows="5">@Html.DisplayFor(modelItem => item.Tech_Skills)</textarea>
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary" title="Details" data-toggle="tooltip" data-placement="top">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" title="Edit" data-toggle="tooltip" data-placement="top">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Delete" data-toggle="tooltip" data-placement="top">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
